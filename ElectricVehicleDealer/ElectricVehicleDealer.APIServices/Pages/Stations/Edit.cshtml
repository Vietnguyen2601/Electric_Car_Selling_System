@page "{id:int}"
@model ElectricVehicleDealer.Presentation.Pages.Stations.EditModel

@section Head {
    <link rel="stylesheet" href="~/css/manage/crud.css" />
}

@if (Model.Station is null)
{
    <section class="crud-page">
        <div class="crud-empty">Không tìm thấy thông tin trạm.</div>
    </section>
}
else
{
    <section class="crud-page">
        <header class="crud-header">
            <div>
                <h2>Chỉnh sửa trạm</h2>
                <p>Cập nhật địa điểm, hotline và trạng thái mở bán cho trạm <strong>@Model.Station.StationName</strong>.</p>
            </div>
            <div class="crud-actions">
                <a asp-page="Index" class="crud-btn crud-btn--ghost">Quay lại danh sách</a>
            </div>
        </header>

        <form method="post" class="crud-form">
            <input type="hidden" asp-for="Input.StationId" />
            <div class="crud-form__grid">
                <div class="crud-field">
                    <label asp-for="Input.StationName"></label>
                    <input asp-for="Input.StationName" class="form-control" />
                    <span asp-validation-for="Input.StationName" class="text-danger"></span>
                </div>
                <div class="crud-field">
                    <label asp-for="Input.Location"></label>
                    <input asp-for="Input.Location" class="form-control" />
                    <span asp-validation-for="Input.Location" class="text-danger"></span>
                </div>
                <div class="crud-field">
                    <label asp-for="Input.ContactNumber"></label>
                    <input asp-for="Input.ContactNumber" class="form-control" />
                    <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                </div>
                <div class="crud-field">
                    <div class="form-check mt-4">
                        <input asp-for="Input.IsActive" class="form-check-input" />
                        <label asp-for="Input.IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="crud-form__actions">
                <button type="submit" class="crud-btn">Lưu thay đổi</button>
                <a asp-page="Index" class="crud-btn crud-btn--ghost">Huỷ</a>
            </div>
        </form>
    </section>
}

<partial name="_ValidationScriptsPartial" />
