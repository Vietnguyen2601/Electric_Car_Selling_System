@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var pageTitle = ViewData["Title"] as string ?? "Customer Dashboard";
    var pageDescription = ViewData["PageDescription"] as string;
    var activeNav = (ViewData["ActiveCustomerNav"] as string ?? "overview").ToLowerInvariant();
    var username = HttpContextAccessor.HttpContext?.Session.GetString("AccountName") ?? "Khách hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout/customer-dashboard.css" />
    <link rel="stylesheet" href="~/css/manage/crud.css" />
    @RenderSection("Head", required: false)
</head>
<body class="customer-body">
    <div class="customer-shell">
        <aside class="customer-sidebar">
            <a class="customer-brand" href="/Home">
                <span class="customer-brand__logo">EV</span>
                <span class="customer-brand__copy">
                    <span class="customer-brand__title">EcoRide</span>
                    <span class="customer-brand__subtitle">Customer Portal</span>
                </span>
            </a>

            <nav class="customer-nav">
                <a class="customer-nav__link @(activeNav == "overview" ? "is-active" : null)" href="/dashboard/customer#overview">Tổng quan</a>
                <a class="customer-nav__link @(activeNav == "orders" ? "is-active" : null)" href="/dashboard/customer#orders">Đơn đặt cọc</a>
                <a class="customer-nav__link @(activeNav == "testdrives" ? "is-active" : null)" href="/dashboard/customer#testdrives">Lịch lái thử</a>
            </nav>

            <div class="customer-sidebar__footer">
                <div class="customer-user">
                    <span class="customer-user__avatar">@username.Substring(0, Math.Min(username.Length, 2)).ToUpperInvariant()</span>
                    <div class="customer-user__meta">
                        <span class="customer-user__name">@username</span>
                        <span class="customer-user__role">Khách hàng</span>
                    </div>
                </div>
                <a class="customer-logout" href="/store/logout">Đăng xuất</a>
            </div>
        </aside>

        <div class="customer-main">
            <header class="customer-topbar">
                <div>
                    <h1>@(ViewData["PageTitle"] ?? pageTitle)</h1>
                    @if (!string.IsNullOrWhiteSpace(pageDescription))
                    {
                        <p>@pageDescription</p>
                    }
                </div>
                @if (IsSectionDefined("PageActions"))
                {
                    <div class="customer-actions">
                        @RenderSection("PageActions", required: false)
                    </div>
                }
            </header>

            <main class="customer-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
