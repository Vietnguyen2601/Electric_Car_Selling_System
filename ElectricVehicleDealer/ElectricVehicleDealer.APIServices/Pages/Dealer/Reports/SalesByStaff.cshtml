@page "/dealer/reports/sales-by-staff"
@model PortalPageModel
@{
    ViewData["Title"] = "Báo cáo doanh số theo nhân viên - Dealer";
    ViewData["PageTitle"] = "Báo cáo doanh số theo nhân viên";
    ViewData["PageDescription"] = "Đánh giá hiệu suất cá nhân và đội nhóm, theo dõi KPI realtime để xây dựng chính sách thưởng minh bạch.";
}

@section PageActions {
    <button class="btn-primary-gradient">Xuất báo cáo PDF</button>
    <button class="btn-secondary-soft">Lập kế hoạch thưởng</button>
}

<div class="panel">
    <div class="panel-header">
        <div>
            <h2>Bộ lọc báo cáo</h2>
            <p>Chọn khung thời gian, đội nhóm và loại KPI cần phân tích.</p>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-grid">
            <div class="form-control-modern">
                <label>Khoảng thời gian</label>
                <select>
                    <option>Tháng hiện tại</option>
                    <option>Quý hiện tại</option>
                    <option>6 tháng gần nhất</option>
                    <option>Tùy chỉnh</option>
                </select>
            </div>
            <div class="form-control-modern">
                <label>Đội nhóm</label>
                <select>
                    <option>Tất cả</option>
                    <option>Sales Zone 1</option>
                    <option>Sales Zone 2</option>
                    <option>Key Account</option>
                </select>
            </div>
            <div class="form-control-modern">
                <label>Chỉ số KPI</label>
                <select>
                    <option>Doanh số</option>
                    <option>Số xe bán ra</option>
                    <option>Tỷ lệ chuyển đổi</option>
                    <option>Công nợ</option>
                </select>
            </div>
            <div class="form-control-modern">
                <label>Nhân viên</label>
                <input placeholder="Tìm theo tên hoặc mã nhân viên" />
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-header">
        <div>
            <h2>Xếp hạng hiệu suất</h2>
            <p>Top nhân viên có kết quả tốt nhất trong kỳ báo cáo.</p>
        </div>
    </div>
    <div class="panel-body">
        <table class="table-modern">
            <thead>
                <tr>
                    <th>Xếp hạng</th>
                    <th>Nhân viên</th>
                    <th>Đội</th>
                    <th>Doanh số</th>
                    <th>Số xe</th>
                    <th>Tỷ lệ chuyển đổi</th>
                    <th>Thưởng đề xuất</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#01</td>
                    <td>Nguyễn Minh</td>
                    <td>Zone 1</td>
                    <td>22.4 tỷ ₫</td>
                    <td>18 xe</td>
                    <td>36%</td>
                    <td class="badge success">150 triệu ₫</td>
                </tr>
                <tr>
                    <td>#02</td>
                    <td>Phạm Trâm</td>
                    <td>Zone 2</td>
                    <td>18.6 tỷ ₫</td>
                    <td>14 xe</td>
                    <td>32%</td>
                    <td class="badge success">120 triệu ₫</td>
                </tr>
                <tr>
                    <td>#03</td>
                    <td>Trần Hải</td>
                    <td>Zone 1</td>
                    <td>16.8 tỷ ₫</td>
                    <td>12 xe</td>
                    <td>28%</td>
                    <td class="badge warning">90 triệu ₫</td>
                </tr>
                <tr>
                    <td>#04</td>
                    <td>Bùi Thảo</td>
                    <td>Key Account</td>
                    <td>14.2 tỷ ₫</td>
                    <td>8 xe</td>
                    <td>42%</td>
                    <td class="badge">80 triệu ₫</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="split-2">
    <div class="panel soft">
        <div class="panel-header">
            <div>
                <h2>Biểu đồ xu hướng</h2>
                <p>Xu hướng doanh số của các đội trong 6 tháng.</p>
            </div>
        </div>
        <div class="panel-body">
            <div class="chart-placeholder">Biểu đồ đường doanh số theo tháng (đang chờ tích hợp)</div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-header">
            <div>
                <h2>Chỉ số KPI bổ sung</h2>
                <p>Nhìn nhanh các chỉ số phụ trợ để đánh giá 360°.</p>
            </div>
        </div>
        <div class="panel-body list-modern">
            <div class="list-item"><strong>Tỷ lệ follow-up đúng hạn</strong><span>87%</span></div>
            <div class="list-item"><strong>Thời gian chốt trung bình</strong><span>12 ngày</span></div>
            <div class="list-item"><strong>Tỷ lệ upsell gói dịch vụ</strong><span>24%</span></div>
            <div class="list-item"><strong>Mức hài lòng khách hàng</strong><span>4.6/5</span></div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-header">
        <div>
            <h2>Kế hoạch coaching</h2>
            <p>Gợi ý hoạt động huấn luyện dựa trên dữ liệu hiệu suất.</p>
        </div>
    </div>
    <div class="panel-body list-modern">
        <div class="list-item">
            <strong>Workshop chốt đơn nâng cao</strong>
            <span>Áp dụng cho nhân viên có tỷ lệ chuyển đổi &lt; 20%</span>
        </div>
        <div class="list-item">
            <strong>Đào tạo sản phẩm EV Cargo</strong>
            <span>Nhắm tới đội chưa đạt KPI doanh nghiệp</span>
        </div>
        <div class="list-item">
            <strong>Coaching 1-1</strong>
            <span>Nguyễn Văn Phú · Cải thiện kỹ năng follow-up</span>
        </div>
    </div>
</div>
