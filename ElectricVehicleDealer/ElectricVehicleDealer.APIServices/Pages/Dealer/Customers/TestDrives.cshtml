@page "/dealer/customers/testdrives"
@model PortalPageModel
@{
    ViewData["Title"] = "Lịch lái thử - Dealer";
    ViewData["PageTitle"] = "Quản lý lịch hẹn lái thử";
    ViewData["PageDescription"] = "Đặt lịch lái thử cho khách hàng, phân công nhân viên phụ trách và tối ưu trải nghiệm trước bán.";
}

@section PageActions {
    <button class="btn-primary-gradient">Đặt lịch mới</button>
    <button class="btn-secondary-soft">Đồng bộ lịch</button>
}

<div class="panel">
    <div class="panel-header">
        <div>
            <h2>Lịch hẹn sắp tới</h2>
            <p>Danh sách các buổi lái thử đã xác nhận.</p>
        </div>
    </div>
    <div class="panel-body">
        <table class="table-modern">
            <thead>
                <tr>
                    <th>Thời gian</th>
                    <th>Khách hàng</th>
                    <th>Mẫu xe</th>
                    <th>Địa điểm</th>
                    <th>Nhân viên phụ trách</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>18/06 · 09:30</td>
                    <td>Phạm Thu Hà</td>
                    <td>EV1 Urban</td>
                    <td>Showroom Quận 1</td>
                    <td>Sales: Trâm</td>
                    <td class="badge success">Đã xác nhận</td>
                </tr>
                <tr>
                    <td>18/06 · 15:00</td>
                    <td>Nguyễn Nhật Nam</td>
                    <td>EV3 Sport</td>
                    <td>Đường test EcoRide City</td>
                    <td>Sales: Minh</td>
                    <td class="badge warning">Chờ xác nhận</td>
                </tr>
                <tr>
                    <td>19/06 · 10:00</td>
                    <td>Lê Thủy Tiên</td>
                    <td>EV2 Touring</td>
                    <td>Showroom Hà Nội</td>
                    <td>Sales: Hải</td>
                    <td class="badge success">Đã xác nhận</td>
                </tr>
                <tr>
                    <td>19/06 · 16:30</td>
                    <td>Công ty Thành Đạt</td>
                    <td>Cargo Fleet</td>
                    <td>Test track Bình Dương</td>
                    <td>Key Account: Đại</td>
                    <td class="badge">Đang chuẩn bị</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="split-2">
    <div class="panel soft">
        <div class="panel-header">
            <div>
                <h2>Đặt lịch lái thử</h2>
                <p>Form đặt lịch cho khách hàng cá nhân và doanh nghiệp.</p>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-grid">
                <div class="form-control-modern">
                    <label>Khách hàng</label>
                    <input placeholder="Tên khách hoặc doanh nghiệp" />
                </div>
                <div class="form-control-modern">
                    <label>Mẫu xe</label>
                    <select>
                        <option>EcoRide EV3 Sport</option>
                        <option>EcoRide EV2 Touring</option>
                        <option>EcoRide EV1 Urban</option>
                        <option>EcoRide Cargo Fleet</option>
                    </select>
                </div>
                <div class="form-control-modern">
                    <label>Ngày và giờ</label>
                    <input type="datetime-local" />
                </div>
                <div class="form-control-modern">
                    <label>Địa điểm</label>
                    <select>
                        <option>Showroom Quận 1</option>
                        <option>Showroom Quận 7</option>
                        <option>Test track Bình Dương</option>
                        <option>EcoRide City Loop</option>
                    </select>
                </div>
            </div>
            <div class="panel-actions">
                <button class="btn-secondary-soft">Gửi email mời</button>
                <button class="btn-primary-gradient">Xác nhận lịch</button>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-header">
            <div>
                <h2>Checklist trải nghiệm</h2>
                <p>Những hạng mục cần chuẩn bị trước khi khách đến lái thử.</p>
            </div>
        </div>
        <div class="panel-body list-modern">
            <div class="list-item">
                <strong>Chuẩn bị xe demo</strong>
                <span>Vệ sinh, sạc đầy, cập nhật phần mềm</span>
            </div>
            <div class="list-item">
                <strong>Tài liệu trình bày</strong>
                <span>Brochure, bảng giá, ưu đãi</span>
            </div>
            <div class="list-item">
                <strong>Lộ trình test gợi ý</strong>
                <span>Đường cao tốc, đô thị, thao tác tính năng</span>
            </div>
            <div class="list-item">
                <strong>After drive follow-up</strong>
                <span>Gọi sau 4 giờ · Gửi khảo sát hài lòng</span>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-header">
        <div>
            <h2>Đánh giá sau lái thử</h2>
            <p>Nhập nhanh cảm nhận khách hàng để cá nhân hoá bước tư vấn tiếp theo.</p>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-grid">
            <div class="form-control-modern">
                <label>Mã lịch</label>
                <input placeholder="Nhập mã lịch" />
            </div>
            <div class="form-control-modern">
                <label>Mức độ hài lòng</label>
                <select>
                    <option>5 - Tuyệt vời</option>
                    <option>4 - Hài lòng</option>
                    <option>3 - Bình thường</option>
                    <option>2 - Cần cải thiện</option>
                    <option>1 - Chưa hài lòng</option>
                </select>
            </div>
        </div>
        <div class="form-control-modern">
            <label>Ghi chú</label>
            <textarea placeholder="Khách quan tâm tính năng nào nhất? Băn khoăn gì cần giải đáp thêm?"></textarea>
        </div>
        <div class="panel-actions">
            <button class="btn-primary-gradient">Lưu đánh giá</button>
        </div>
    </div>
</div>
