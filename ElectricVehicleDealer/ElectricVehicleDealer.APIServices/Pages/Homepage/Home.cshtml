@page
@model ElectricVehicleDealer.Presentation.Pages.Homepage.HomeModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>EcoRide - Hệ thống bán xe điện</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Home/home.css" />
    <link rel="stylesheet" href="~/css/Home/footer.css" />
    <link rel="stylesheet" href="~/css/Home/header.css" />
</head>
<body>
    <header class="main-header">
        <div class="logo">EcoRide</div>
        <nav class="nav-left">
            <a href="/Home">Trang chủ</a>
            <a href="/Products">Sản phẩm</a>
            <a href="/About">Về chúng tôi</a>
            <a href="/Contact">Liên hệ</a>
        </nav>
        <div class="nav-right">
            <a href="/Login">Đăng nhập</a>
            <a href="/Register" class="register-btn">Đăng ký</a>
        </div>
    </header>


    <section class="hero">
        <h2>Trải nghiệm tương lai di chuyển xanh</h2>
        <p>Xe điện thông minh, hiệu năng cao, thân thiện với môi trường</p>
        <a href="/Products" class="btn btn-light mt-3">Khám phá ngay</a>
    </section>

    <div class="container text-center">
        <h3 class="mb-4">Xe nổi bật</h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img src="/images/bike1.jpg" class="card-img-top" alt="EV1">
                    <div class="card-body">
                        <h5 class="card-title">EcoRide EV1</h5>
                        <p class="card-text">Xe điện tiết kiệm năng lượng, thiết kế hiện đại.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img src="/images/bike2.jpg" class="card-img-top" alt="EV2">
                    <div class="card-body">
                        <h5 class="card-title">EcoRide EV2</h5>
                        <p class="card-text">Tốc độ vượt trội, pin bền bỉ lên đến 150km.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img src="/images/bike3.jpg" class="card-img-top" alt="EV3">
                    <div class="card-body">
                        <h5 class="card-title">EcoRide EV3</h5>
                        <p class="card-text">Phong cách thể thao, mạnh mẽ, đột phá.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 EcoRide | Mọi quyền được bảo lưu.</p>
    </footer>
</body>
</html>
