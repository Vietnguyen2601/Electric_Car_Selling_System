@page
@model ElectricVehicleDealer.Presentation.Pages.Manage.IndexModel
@{
    ViewData["PageTitle"] = "Trang quản lý";
    ViewData["PageDescription"] = "Quản trị nhanh các phân hệ Accounts, Vehicles, Orders và Stations.";
}

<h1 class="mb-4">Management Dashboard</h1>

<div class="row g-4">
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100 border-primary">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Accounts</h5>
                <p class="text-muted flex-grow-1">Quản lý thông tin tài khoản nhân viên và khách hàng.</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="badge bg-primary fs-6">@Model.AccountCount tổng</span>
                    <a asp-page="/Account/Index" class="btn btn-outline-primary btn-sm">Manage</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100 border-success">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Vehicles</h5>
                <p class="text-muted flex-grow-1">Theo dõi danh mục xe điện, tình trạng và giá bán.</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="badge bg-success fs-6">@Model.VehicleCount tổng</span>
                    <a asp-page="/Vehicles/Index" class="btn btn-outline-success btn-sm">Manage</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100 border-warning">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Orders</h5>
                <p class="text-muted flex-grow-1">Quản lý đơn hàng, trạng thái xử lý và khuyến mãi áp dụng.</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="badge bg-warning text-dark fs-6">@Model.OrderCount tổng</span>
                    <a asp-page="/Orders/Index" class="btn btn-outline-warning btn-sm text-dark">Manage</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100 border-info">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Stations</h5>
                <p class="text-muted flex-grow-1">Quản lý trạm trưng bày, thông tin liên hệ và trạng thái hoạt động.</p>
                <div class="d-flex justify-content-between align-items-end">
                    <span class="badge bg-info text-dark fs-6">@Model.StationCount tổng</span>
                    <a asp-page="/Stations/Index" class="btn btn-outline-info btn-sm">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>
