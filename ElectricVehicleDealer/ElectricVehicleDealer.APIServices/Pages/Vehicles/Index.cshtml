@page
@model ElectricVehicleDealer.Presentation.Pages.Vehicles.IndexModel

@section Head {
    <link rel="stylesheet" href="~/css/manage/crud.css" />
}

<section class="crud-page">
    <header class="crud-header">
        <div>
            <h2>Danh mục xe điện</h2>
            <p>Kiểm soát cấu hình sản phẩm, màu sắc và trạng thái kinh doanh của từng mẫu xe.</p>
        </div>
        <div class="crud-actions">
            <a asp-page="Create" class="crud-btn">+ Thêm xe</a>
        </div>
    </header>

    <div class="crud-table">
        @if (!Model.Vehicles.Any())
        {
            <div class="crud-empty">Chưa có xe nào trong hệ thống.</div>
        }
        else
        {
            <table class="table table-hover align-middle crud-table__table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Model</th>
                    <th>Loại</th>
                    <th>Màu sắc</th>
                    <th>Giá bán</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var vehicle in Model.Vehicles)
                {
                    <tr>
                        <td>@vehicle.VehicleId</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.Type</td>
                        <td>@vehicle.Color</td>
                        <td>@vehicle.Price.ToString("N0") ₫</td>
                        <td>
                            <span class="crud-tag @(vehicle.IsActive ? "crud-tag--success" : "crud-tag--danger")">
                                @(vehicle.IsActive ? "Đang kinh doanh" : "Ngưng")
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="crud-table__actions">
                                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@vehicle.VehicleId">Sửa</a>
                                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@vehicle.VehicleId">Xoá</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>

    <section class="vehicle-distribution">
        <header class="vehicle-distribution__header">
            <div>
                <h3>Phân bổ xe theo trạm</h3>
                <p>Gán xe vào các trạm hoạt động và cập nhật nhanh số lượng kho.</p>
            </div>
        </header>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="vehicle-feedback vehicle-feedback--success">@Model.SuccessMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="vehicle-feedback vehicle-feedback--error">@Model.ErrorMessage</div>
        }

        <div class="vehicle-distribution__grid">
            <article class="vehicle-distribution__card">
                <h4>Gán xe vào trạm</h4>
                <p class="vehicle-distribution__hint">Chọn xe, trạm và số lượng để phân bổ. Nếu cập nhật lại trạm cũ, hệ thống sẽ thay số lượng mới.</p>

                <form method="post" asp-page-handler="Assign" class="vehicle-distribution__form">
                    <div asp-validation-summary="ModelOnly" class="vehicle-validation"></div>

                    <div class="vehicle-field">
                        <label asp-for="SelectedVehicleId">Xe điện</label>
                        <select class="vehicle-select" asp-for="SelectedVehicleId">
                            <option value="0">-- Chọn xe --</option>
                            @foreach (var vehicle in Model.Vehicles)
                            {
                                <option value="@vehicle.VehicleId">@vehicle.Model</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedVehicleId" class="vehicle-validation__message"></span>
                    </div>

                    <div class="vehicle-field">
                        <label asp-for="SelectedStationId">Trạm</label>
                        <select class="vehicle-select" asp-for="SelectedStationId">
                            <option value="0">-- Chọn trạm --</option>
                            @foreach (var station in Model.Stations)
                            {
                                <option value="@station.StationId">@station.StationName</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedStationId" class="vehicle-validation__message"></span>
                    </div>

                    <div class="vehicle-field">
                        <label asp-for="Quantity">Số lượng</label>
                        <input class="vehicle-input" asp-for="Quantity" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="vehicle-validation__message"></span>
                    </div>

                    <button type="submit" class="crud-btn vehicle-distribution__submit">Lưu phân bổ</button>

                    @if (!Model.Vehicles.Any() || !Model.Stations.Any())
                    {
                        <p class="vehicle-distribution__note">Cần có ít nhất 1 xe và 1 trạm đang hoạt động để thực hiện phân bổ.</p>
                    }
                </form>
            </article>

            <article class="vehicle-distribution__card vehicle-distribution__card--list">
                <h4>Danh sách phân bổ</h4>
                @if (Model.StationAssignments.Any())
                {
                    <div class="vehicle-table-wrapper">
                        <table class="vehicle-table">
                            <thead>
                                <tr>
                                    <th>Xe</th>
                                    <th>Trạm</th>
                                    <th>Địa điểm</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assignment in Model.StationAssignments)
                                {
                                    <tr>
                                        <td>@assignment.VehicleModel</td>
                                        <td>@assignment.StationName</td>
                                        <td>@assignment.Location</td>
                                        <td>@assignment.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="vehicle-distribution__empty">Chưa có phân bổ nào.</p>
                }
            </article>
        </div>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
