@page
@model ElectricVehicleDealer.Presentation.Pages.Orders.IndexModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Orders</h2>
    <a asp-page="Create" class="btn btn-primary">Create Order</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Customer</th>
        <th>Staff</th>
        <th>Station</th>
        <th>Status</th>
        <th>Total</th>
        <th>Order Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.CustomerUsername</td>
            <td>@order.StaffUsername</td>
            <td>@order.StationName</td>
            <td>@order.Status</td>
            <td>@order.TotalPrice.ToString("C")</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@order.OrderId">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@order.OrderId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
