@page "{id:int}"
@model ElectricVehicleDealer.Presentation.Pages.Orders.DeleteModel

<h2>Delete Order</h2>

@if (Model.Order is null)
{
    <div class="alert alert-warning">Order not found.</div>
}
else
{
    <div class="alert alert-danger">
        Are you sure you want to delete order <strong>#@Model.Order.OrderId</strong>?
    </div>
    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Order.CustomerUsername</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Order.Status</dd>
        <dt class="col-sm-3">Total</dt>
        <dd class="col-sm-9">@Model.Order.TotalPrice.ToString("C")</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
