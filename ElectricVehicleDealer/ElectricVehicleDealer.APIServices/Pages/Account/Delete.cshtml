@page "{id:int}"
@model ElectricVehicleDealer.Presentation.Pages.Account.DeleteModel

<h2>Delete Account</h2>

@if (Model.Account is null)
{
    <div class="alert alert-warning">Account not found.</div>
}
else
{
    <div class="alert alert-danger">
        Are you sure you want to delete account <strong>@Model.Account.Username</strong>?
    </div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.Email</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Account.ContactNumber</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
