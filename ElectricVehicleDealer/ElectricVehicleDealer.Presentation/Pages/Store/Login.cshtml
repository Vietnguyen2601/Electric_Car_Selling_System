@page "/store/login"
@model ElectricVehicleDealer.Presentation.Pages.Store.LoginModel
@{
    Layout = "_StoreLayout";
    ViewData["Title"] = "Đăng nhập khách hàng - EcoRide";
}

<section class="store-section">
    <div class="store-container">
        <div class="auth-card">
            <div>
                <h1>Chào mừng trở lại</h1>
                <p>Đăng nhập để theo dõi đơn hàng, đặt lịch lái thử và quản lý thông tin xe của bạn.</p>
            </div>

            <form method="post" class="store-form compact">
                <div class="form-control-modern">
                    <label>Email</label>
                    <input type="email" asp-for="Email" placeholder="you@example.com" required />
                </div>
                <div class="form-control-modern">
                    <label>Mật khẩu</label>
                    <input type="password" asp-for="Password" placeholder="••••••••" required />
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <p style="color:red;">@Model.ErrorMessage</p>
                }
                <div class="form-support">
                    <a class="btn-ghost" href="/store/register">Tạo tài khoản mới</a>
                    <a class="support-link" href="#">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn-primary">Đăng nhập</button>
            </form>
        </div>
    </div>
</section>
