@page
@model ElectricVehicleDealer.Presentation.Pages.Evm.Products.CatalogModel
@using System.Linq

@section Head {
    <link rel="stylesheet" href="~/css/manage/crud.css" />
}

<section class="crud-page" id="catalog">
    <header class="crud-header">
        <div>
            <h2>Danh mục xe điện</h2>
            <p>Kiểm soát cấu hình sản phẩm, màu sắc và trạng thái kinh doanh của từng mẫu xe.</p>
        </div>
        <div class="crud-actions">
            <a asp-page="/Evm/Products/Catalog/Create" class="crud-btn">+ Thêm xe</a>
        </div>
    </header>

    <div class="crud-table">
        @if (!Model.Vehicles.Any())
        {
            <div class="crud-empty">Chưa có xe nào trong hệ thống.</div>
        }
        else
        {
            <table class="crud-table__table">
                <thead>
                    <tr>
                        <th class="crud-table__col-id">Mã</th>
                        <th>Model</th>
                        <th>Loại</th>
                        <th>Màu sắc</th>
                        <th class="text-end">Giá bán</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var vehicle in Model.Vehicles)
                {
                    var colorTokens = (vehicle.Color ?? string.Empty)
                        .Split(',', System.StringSplitOptions.RemoveEmptyEntries)
                        .Select(token => token.Trim())
                        .Where(token => !string.IsNullOrWhiteSpace(token))
                        .ToArray();
                    <tr class="crud-table__row">
                        <td class="crud-table__cell crud-table__cell--id">
                            <span class="crud-id-badge">#@vehicle.VehicleId</span>
                        </td>
                        <td class="crud-table__cell crud-table__cell--model">
                            <div class="crud-model">
                                <span class="crud-model__name">@vehicle.Model</span>
                                <span class="crud-model__meta">Mã nội bộ: @vehicle.VehicleId</span>
                            </div>
                        </td>
                        <td class="crud-table__cell crud-table__cell--type">
                            <span class="crud-chip">@vehicle.Type</span>
                        </td>
                        <td class="crud-table__cell crud-table__cell--colors">
                            @if (colorTokens.Length == 0)
                            {
                                <span class="crud-chip crud-chip--muted">Không rõ</span>
                            }
                            else
                            {
                                foreach (var color in colorTokens)
                                {
                                    <span class="crud-chip crud-chip--muted">@color</span>
                                }
                            }
                        </td>
                        <td class="crud-table__cell crud-table__cell--price text-end">
                            <span class="crud-price">@vehicle.Price.ToString("N0") ₫</span>
                        </td>
                        <td class="crud-table__cell crud-table__cell--status">
                            <span class="crud-tag @(vehicle.IsActive ? "crud-tag--success" : "crud-tag--danger")">
                                @(vehicle.IsActive ? "Đang kinh doanh" : "Ngưng")
                            </span>
                        </td>
                        <td class="crud-table__cell crud-table__cell--actions text-end">
                            <div class="crud-table__actions">
                                <a class="crud-icon-btn" asp-page="/Evm/Products/Catalog/Edit" asp-route-id="@vehicle.VehicleId">
                                    <span class="crud-icon crud-icon--edit" aria-hidden="true"></span>
                                    <span>Sửa</span>
                                </a>
                                <a class="crud-icon-btn crud-icon-btn--danger" asp-page="/Evm/Products/Catalog/Delete" asp-route-id="@vehicle.VehicleId">
                                    <span class="crud-icon crud-icon--delete" aria-hidden="true"></span>
                                    <span>Xoá</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>

    <section class="vehicle-distribution" id="distribution">
        <header class="vehicle-distribution__header">
            <div>
                <h3>Phân bổ xe theo trạm</h3>
                <p>Gán xe vào các trạm hoạt động và cập nhật nhanh số lượng kho thực tế.</p>
            </div>
        </header>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="vehicle-feedback vehicle-feedback--success">@Model.SuccessMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="vehicle-feedback vehicle-feedback--error">@Model.ErrorMessage</div>
        }

        <div class="vehicle-distribution__grid">
            <article class="vehicle-distribution__card">
                <h4>Gán xe vào trạm</h4>
                <p class="vehicle-distribution__hint">Chọn xe, trạm và số lượng để phân bổ. Khi cập nhật lại, hệ thống sẽ thay số lượng mới.</p>

                <form method="post" asp-page-handler="Assign" class="vehicle-distribution__form">
                    <div asp-validation-summary="ModelOnly" class="vehicle-validation"></div>

                    <div class="vehicle-field">
                        <label asp-for="SelectedVehicleId">Xe điện</label>
                        <select class="vehicle-select" asp-for="SelectedVehicleId">
                            <option value="0">-- Chọn xe --</option>
                            @foreach (var vehicle in Model.Vehicles)
                            {
                                <option value="@vehicle.VehicleId">@vehicle.Model</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedVehicleId" class="vehicle-validation__message"></span>
                    </div>

                    <div class="vehicle-field">
                        <label asp-for="SelectedStationId">Trạm</label>
                        <select class="vehicle-select" asp-for="SelectedStationId">
                            <option value="0">-- Chọn trạm --</option>
                            @foreach (var station in Model.Stations)
                            {
                                <option value="@station.StationId">@station.StationName</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedStationId" class="vehicle-validation__message"></span>
                    </div>

                    <div class="vehicle-field">
                        <label asp-for="Quantity">Số lượng</label>
                        <input class="vehicle-input" asp-for="Quantity" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="vehicle-validation__message"></span>
                    </div>

                    <button type="submit" class="crud-btn vehicle-distribution__submit">Lưu phân bổ</button>

                    @if (!Model.Vehicles.Any() || !Model.Stations.Any())
                    {
                        <p class="vehicle-distribution__note">Cần có ít nhất 1 xe và 1 trạm đang hoạt động để thực hiện phân bổ.</p>
                    }
                </form>
            </article>

            <article class="vehicle-distribution__card vehicle-distribution__card--list">
                <h4>Danh sách phân bổ</h4>
                @if (Model.StationAssignments.Any())
                {
                    <div class="vehicle-table-wrapper">
                        <table class="vehicle-table">
                            <thead>
                                <tr>
                                    <th>Xe</th>
                                    <th>Trạm</th>
                                    <th>Địa điểm</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assignment in Model.StationAssignments)
                                {
                                    <tr>
                                        <td>@assignment.VehicleModel</td>
                                        <td>@assignment.StationName</td>
                                        <td>@assignment.Location</td>
                                        <td>@assignment.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="vehicle-distribution__empty">Chưa có phân bổ nào.</p>
                }
            </article>
        </div>
    </section>
</section>

<section class="vehicle-pricing" id="pricing">
    <header class="vehicle-distribution__header">
        <div>
            <h3>Giá sỉ & chiết khấu</h3>
            <p>Xem nhanh giá niêm yết và đề xuất mức chiết khấu dành cho từng phiên bản xe điện.</p>
        </div>
    </header>

    @if (Model.Vehicles.Any())
    {
        <div class="vehicle-table-wrapper">
            <table class="vehicle-table vehicle-table--pricing">
                <thead>
                    <tr>
                        <th>Model</th>
                        <th>Loại</th>
                        <th>Giá niêm yết</th>
                        <th>Chiết khấu đề xuất</th>
                        <th>Giá sỉ</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var vehicle in Model.Vehicles)
                {
                    var suggestedDiscount = vehicle.Price * 0.05m;
                    var wholesalePrice = vehicle.Price - suggestedDiscount;
                    <tr>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.Type</td>
                        <td>@vehicle.Price.ToString("N0") ₫</td>
                        <td>@suggestedDiscount.ToString("N0") ₫</td>
                        <td>@wholesalePrice.ToString("N0") ₫</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="vehicle-distribution__empty">Chưa có dữ liệu giá sỉ. Vui lòng thêm xe vào danh mục trước.</p>
    }
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

