@page
@model ElectricVehicleDealer.Presentation.Pages.Account.IndexModel

@section Head {
    <link rel="stylesheet" href="~/css/manage/crud.css" />
}

<section class="crud-page">
    <header class="crud-header">
        <div>
            <h2>Danh sách tài khoản</h2>
            <p>Quản lý thông tin đăng nhập, email liên hệ và trạng thái hoạt động của người dùng hệ thống.</p>
        </div>
        <div class="crud-actions">
            <a class="crud-btn" asp-page="Create">+ Tạo tài khoản</a>
        </div>
    </header>

    <div class="crud-table">
        @if (!Model.Accounts.Any())
        {
            <div class="crud-empty">Chưa có tài khoản nào được tạo.</div>
        }
        else
        {
            <table class="table table-hover align-middle crud-table__table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Liên hệ</th>
                    <th>Vai trò</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr>
                        <td>@account.AccountId</td>
                        <td>@account.Username</td>
                        <td>@account.Email</td>
                        <td>@account.ContactNumber</td>
                        <td>
                            @if (account.Roles.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var role in account.Roles)
                                    {
                                        <span class="crud-tag crud-tag--neutral">@role</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Chưa gán</span>
                            }
                        </td>
                        <td>@account.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="crud-tag @(account.IsActive ? "crud-tag--success" : "crud-tag--danger")">
                                @(account.IsActive ? "Đang hoạt động" : "Ngưng")
                            </span>
                        </td>
                        <td class="text-end">
                            <div class="crud-table__actions">
                                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@account.AccountId">Sửa</a>
                                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@account.AccountId">Xoá</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</section>
